<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.diagnosisResult.ResultTabAFragment">
    <data>
        <variable
            name="viewModel"
            type="com.example.kusithms_hdmedi_project.viewmodel.DiagnosisResultViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:id="@+id/myscroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@id/banner"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:text="@{viewModel.iswarning ? @string/resulta1 : @string/resulta2}"
                        android:textColor="@color/black"
                        android:fontFamily="@font/pretendard_semibold"
                        android:textSize="20sp"
                        android:lineHeight="28dp"
                        android:layout_marginLeft="24dp"
                        />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/resultbox"
                        app:layout_constraintTop_toBottomOf="@+id/title"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp">

                        <TextView
                            android:id="@+id/score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.totalscore !=null ? Integer.toString(viewModel.totalscore): `0`}"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textSize="50sp"
                            android:textColor="@color/resultscore"
                            android:fontFamily="@font/pretendard_bold"
                            android:layout_marginTop="27dp"
                            android:layout_marginLeft="24dp"
                            />
                        <TextView
                            android:id="@+id/jum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="점"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/score"
                            android:textSize="50sp"
                            android:textColor="@color/resultscore"
                            android:fontFamily="@font/pretendard_bold"
                            android:layout_marginTop="27dp"
                            />
                        <ImageView
                            android:id="@+id/main_character"
                            android:layout_width="156dp"
                            android:layout_height="156dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:src="@{viewModel.iswarning ? @drawable/main_sad : @drawable/main_nice}"
                            android:layout_marginRight="6dp"
                            android:layout_marginTop="2dp"
                            />
                        <SeekBar
                            android:layout_width="94dp"
                            android:layout_height="14dp"
                            app:layout_constraintTop_toBottomOf="@id/main_character"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginRight="25dp"
                            android:max="54"
                            android:thumb="@drawable/seekbarthumb"
                            android:background="@{viewModel.iswarning ? @drawable/seekbarred : @drawable/seekbarblue}"
                            android:splitTrack="false"
                            android:progress="@{viewModel.totalscore}"
                            android:progressDrawable="@drawable/transparent_progress"
                            android:enabled = "false"
                            />
                        <TextView
                            android:id="@+id/fullscore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/score"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:text="@string/totalscore"
                            android:layout_marginTop="44dp"
                            android:layout_marginLeft="24dp"
                            android:fontFamily="@font/pretendard_semibold"
                            android:textSize="28sp"
                            android:textColor="@color/fullscore"
                            />

                        <TextView
                            android:id="@+id/fullscore_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="13dp"
                            android:fontFamily="@font/pretendard_semibold"
                            android:text="@string/totalscorebelow"
                            android:textColor="@color/fullscore"
                            android:textSize="10sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/fullscore" />

                        <LinearLayout
                            android:id="@+id/divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            app:layout_constraintTop_toBottomOf="@+id/fullscore_des"

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/reference2"
                            android:textColor="@color/questiontitle"
                            android:fontFamily="@font/pretendard_medium"
                            android:textSize="13sp"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="16dp"
                            />



                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bannershape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myscroll">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="44dp"
                android:layout_height="46dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:src="@drawable/bannericon2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bannerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="@string/bannerTitle"
                android:textColor="@color/bannerTitle"
                android:textSize="13sp"
                app:layout_constraintLeft_toRightOf="@id/icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bannerContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="26dp"
                android:fontFamily="@font/pretendard_semibold"
                android:paddingTop="9dp"
                android:text="@string/bannerContent"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/icon"
                app:layout_constraintTop_toBottomOf="@+id/bannerTitle" />

            <ImageView
                android:id="@+id/forwardbtn"
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="28dp"
                android:src="@drawable/forward"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>


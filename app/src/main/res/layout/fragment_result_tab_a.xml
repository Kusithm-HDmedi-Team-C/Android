                        android:layout_marginLeft="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:fontFamily="@font/pretendard_semibold"
                            android:text="1"

                            android:layout_height="12dp"
                            android:src="@drawable/down"
                            android:layout_marginTop="12.65dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/num5"

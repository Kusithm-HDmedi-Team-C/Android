<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.example.kusithms_hdmedi_project.viewmodel.DiagnosisResultViewModel" />
    </data>
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:context=".view.ResultTabAFragment">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:text="@string/resulta1"
                        android:textColor="@color/black"
                        android:fontFamily="@font/pretendard_semibold"
                        android:textSize="20sp"
                        android:lineHeight="28dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginLeft="24dp"
                        />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/resultbox"
                        app:layout_constraintTop_toBottomOf="@+id/title"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp">

                        <TextView
                            android:id="@+id/score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.totalscore !=null ? Integer.toString(viewModel.totalscore): `0`}"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textSize="50sp"
                            android:textColor="@color/resultscore"
                            android:fontFamily="@font/pretendard_bold"
                            android:layout_marginTop="27dp"
                            android:layout_marginLeft="24dp"
                            />
                        <ImageView
                            android:id="@+id/main_character"
                            android:layout_width="156dp"
                            android:layout_height="156dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:src="@drawable/main_sad"
                            android:layout_marginRight="6dp"
                            android:layout_marginTop="2dp"
                            />
                        <TextView
                            android:id="@+id/fullscore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/score"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:text="@string/totalscore"
                            android:layout_marginTop="44dp"
                            android:layout_marginLeft="24dp"
                            android:fontFamily="@font/pretendard_semibold"
                            android:textSize="28sp"
                            android:textColor="@color/fullscore"
                            />

                        <TextView
                            android:id="@+id/fullscore_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="13dp"
                            android:fontFamily="@font/pretendard_semibold"
                            android:text="@string/totalscorebelow"
                            android:textColor="@color/fullscore"
                            android:textSize="10sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/fullscore" />

                        <LinearLayout
                            android:id="@+id/divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            app:layout_constraintTop_toBottomOf="@+id/fullscore_des"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="15dp"
                            android:backgroundTint="@color/white"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal"
                            android:background="@drawable/divider"
                            />
                        <LinearLayout
                            android:id="@+id/linear1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/divider"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Tabunselected"
                                android:layout_marginLeft="24dp"
                                android:text="@string/uncareful_score"
                                android:fontFamily="@font/pretendard_medium"
                                android:textSize="17sp"
                                />

                            <ImageView
                                android:id="@+id/mini_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:src="@drawable/snow"
                                android:paddingTop="3dp"
                                />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                />
                            <TextView
                                android:id="@+id/uncareful_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.careless !=null ? Integer.toString(viewModel.careless): `0`}"
                                android:fontFamily="@font/pretendard_semibold"
                                android:textSize="17sp"
                                android:textColor="@color/resultscore"
                                android:layout_marginRight="24.69dp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/linear1"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="11dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginBottom="23dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Tabunselected"
                                android:layout_marginLeft="24dp"
                                android:text="@string/activity_score"
                                android:fontFamily="@font/pretendard_medium"
                                android:textSize="17sp"
                                />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                />
                            <TextView
                                android:id="@+id/activity_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.impulsitive !=null ? Integer.toString(viewModel.impulsitive): `1`}"
                                android:fontFamily="@font/pretendard_semibold"
                                android:textSize="17sp"
                                android:textColor="@color/resultscore"
                                android:layout_marginRight="24.69dp"
                                />

                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/resultdetail1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/container"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="24dp"
                        android:text="@string/resultdetail1"
                        android:fontFamily="@font/pretendard_medium"
                        android:textSize="15sp"
                        android:lineSpacingExtra="3sp"
                        android:textColor="@color/Tabunselected"
                        />

                    <LinearLayout
                        android:id="@+id/layoutcontainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        app:layout_constraintTop_toBottomOf="@+id/resultdetail1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/storestyle"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/storebox"
                                android:layout_marginTop="14dp"
                                android:layout_marginBottom="14dp"
                                android:layout_marginLeft="24dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/store"
                                android:textColor="@color/resultscore"
                                android:textSize="15sp"
                                android:fontFamily="@font/pretendard_semibold"
                                android:layout_marginLeft="9dp"
                                android:layout_marginBottom="13dp"
                                android:layout_marginTop="14dp"
                                android:layout_marginRight="25dp"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/resultdetail2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/resultdetail1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="24dp"
                        android:text="@string/resultdetail2"
                        android:fontFamily="@font/pretendard_semibold"
                        android:textSize="20sp"
                        android:lineSpacingExtra="4sp"
                        />



                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bannershape"
            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bannericon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"/>
            <TextView
                android:id="@+id/bannerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/icon"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="12dp"
                android:text="@string/bannerTitle"
                android:textColor="@color/bannerTitle"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/bannerContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/icon"
                app:layout_constraintTop_toBottomOf="@+id/bannerTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingTop="9dp"
                android:layout_marginLeft="12dp"
                android:text="@string/bannerContent"
                android:layout_marginBottom="26dp"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_semibold"
                />

            <ImageView
                android:id="@+id/forwardbtn"
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:src="@drawable/forward"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="28dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

</layout>
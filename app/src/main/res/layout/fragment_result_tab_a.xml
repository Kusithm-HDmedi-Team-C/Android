                    <LinearLayout
                        android:id="@+id/question2"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/oval"
                        app:layout_constraintTop_toBottomOf="@id/sequence"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="41dp"
                        android:layout_marginLeft="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:fontFamily="@font/pretendard_semibold"
                            android:text="2"
                            android:textColor="@color/Tabunselected"
                            />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/question1title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/howto2"
                        android:textColor="@color/questiontitle"
                        android:fontFamily="@font/pretendard_semibold"
                        android:textSize="17sp"
                        app:layout_constraintTop_toBottomOf="@id/sequence"
                        app:layout_constraintLeft_toRightOf="@id/question2"
                        android:layout_marginTop="42dp"
                        android:layout_marginLeft="12dp"

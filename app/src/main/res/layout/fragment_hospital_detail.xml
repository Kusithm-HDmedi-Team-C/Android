<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1"
    android:background="@color/white">
    <data>
        <variable
            name="viewModel"
            type="com.example.kusithms_hdmedi_project.viewmodel.HospitalSearchViewModel" />
    </data>
    
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.hospital.search.HospitalDetailFragment"
    android:elevation="4dp"
    >
    
    <LinearLayout
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        />

    <TextView
        android:id="@+id/hospitalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{viewModel.detailHospital[0].name}"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="24dp"
        android:textColor="@color/score"
        android:fontFamily="@font/pretendard_semibold"
        android:textSize="22sp"
        />
    <LinearLayout
        android:id="@+id/scoreContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hospitalTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal"
        >
        
        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/star"
            />
        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{Double.toString(viewModel.detailHospital[0].averageRating)}"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="17sp"
            android:textColor="@color/score"
            android:includeFontPadding="false"
            android:layout_marginLeft="4dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" /5"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="17sp"
            android:textColor="@color/fullscore"
            android:includeFontPadding="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="후기"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="17sp"
            android:textColor="@color/questiontitle"
            android:includeFontPadding="false"
            android:layout_marginLeft="12dp"
            />
        <TextView
            android:id="@+id/review_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{Integer.toString(viewModel.detailHospital[0].count)}"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="17sp"
            android:textColor="@color/questiontitle"
            android:includeFontPadding="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="17sp"
            android:textColor="@color/questiontitle"
            android:includeFontPadding="false"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/locationContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/scoreContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="25dp">
        
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/location"
            />
        <TextView
            android:id="@+id/detailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@{viewModel.detailHospital[0].address}"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="15sp"
            android:textColor="@color/questiontitle"
            android:includeFontPadding="false"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/phnumContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locationContainer"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="6.5dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/calling"
            />

        <TextView
            android:id="@+id/detailPhnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.detailHospital[0].telephone}"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="15sp"
            android:textColor="@color/questiontitle"
            android:includeFontPadding="false"
            android:layout_marginLeft="8dp"
            />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goto_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/hospitalbtn"
        app:layout_constraintTop_toBottomOf="@id/phnumContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/지도_바로가기"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:includeFontPadding="false"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        />
    <LinearLayout
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/goto_map"
        android:background="@drawable/divider2"
        android:layout_marginTop="20dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reviewRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/review_list_item"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
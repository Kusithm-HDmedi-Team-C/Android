<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FBFF"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:textColor="@color/white"
        android:gravity="bottom"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_bold"
        android:paddingLeft="24dp"
        android:paddingBottom="24dp"
        android:background="@color/main_blue"
        android:text="@string/우리_아이_ADHD_빨리_알수록_좋으니까"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_bold"
        android:text="@string/우리_아이_혹시_ADHD일까_"
        android:textColor="#707885"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:textSize="20sp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_diagnosis"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:elevation="4dp"
        android:background="@drawable/bg_rad_20_solid_white"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="24dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="@string/자가진단"
            android:textColor="#353C49"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="약 5분, 18개 문항"
            android:layout_marginTop="8dp"
            android:textColor="#8D94A0"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <ImageView
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:src="@drawable/home_1"
            android:layout_marginVertical="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_home_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_bold"
        android:text="@string/ADHD_어디에서_진단받지"
        android:textColor="#707885"
        android:layout_marginLeft="24dp"
        android:textSize="20sp"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_hospital_diagnosis"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:elevation="4dp"
        android:background="@drawable/bg_rad_20_solid_white"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="24dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_arrow_right"
            android:drawablePadding="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="@string/진료_후기"
            android:textColor="#353C49"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="@string/다른_사람들이_방문한_병원_후기"
            android:layout_marginTop="8dp"
            android:textColor="#8D94A0"
            android:lineHeight="20sp"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/textView1"
            app:layout_constraintTop_toBottomOf="@+id/textView1" />

        <ImageView
            android:layout_width="132dp"
            android:layout_height="0dp"
            android:src="@drawable/home_2"
            android:layout_marginRight="12dp"
            android:layout_marginVertical="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_home_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_bold"
        android:text="@string/ADHD_부작용_없이_치료할_수_있을까_"
        android:textColor="#707885"
        android:layout_marginLeft="24dp"
        android:textSize="20sp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_i"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:elevation="4dp"
        android:background="@drawable/bg_rad_20_solid_white"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="@string/아이약"
            android:textColor="#353C49"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="약 정보 확인하고\n규칙적으로 관리하기"
            android:layout_marginTop="8dp"
            android:textColor="#8D94A0"
            android:lineHeight="20sp"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:src="@drawable/home_3"
            android:layout_marginVertical="14dp"
            android:layout_marginRight="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    
    <TextView
        android:id="@+id/btn_review_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingVertical="16dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/bg_rad_8"
        android:backgroundTint="@color/main_blue"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ic_plus_white"
        android:drawablePadding="8dp"
        android:text="@string/후기_작성하기"/>
</androidx.appcompat.widget.LinearLayoutCompat>
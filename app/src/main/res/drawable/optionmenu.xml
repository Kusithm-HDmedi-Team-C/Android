<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <stroke android:color="@color/sub_blue"
                        android:width="1dp"/>
                    <corners android:radius="4dp" />
                    <padding android:right="14dp"/>
                    <padding android:top="11.5dp"/>
                    <padding android:bottom="11.5dp"/>
                    <padding android:left="8dp"/>

                </shape>

            </item>
            <item android:gravity="center|end"
                android:width="15dp" android:height="9dp">
                <bitmap android:src="@drawable/downbtn" android:tint="@color/sub_blue"/>
            </item>

        </layer-list>
    </item>
</selector>